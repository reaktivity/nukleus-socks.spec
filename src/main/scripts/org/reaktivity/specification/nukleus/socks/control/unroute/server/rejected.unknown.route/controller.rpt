property newClientAcceptRef ${nukleus:newRouteRef()} # external scope
property newClientConnectRef ${nukleus:newRouteRef()} # external scope

property nukleiUR020101C ${nuklei:directory("target/nukleus-itests").controlCapacity(1024, 1024)}

property controlUR020101C ${nukleiUR020101C.control("socks")}

connect "agrona://stream/bidirectional"
        option agrona:reader ${agrona:broadcastReceiver(controlUR020101C.controller)}
        option agrona:writer ${agrona:manyToOneWriter(controlUR020101C.nukleus)}
        option nukleus:byteorder "network"

connected

write 0x00000002
write ${controlUR020101C.nextCorrelationId()}
write [0x00]
write ${core:string("source")}
write ${newClientAcceptRef}
write ${core:string("target")}
write ${newClientConnectRef}
write 0L
write [0x00]
write ${core:string("example.com")}
write short 8080
write flush

read 0x40000000
read ${controlUR020101C.correlationId()}

close
closed
